<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokedex_background" />

    <ImageView
        android:id="@+id/pokemonImage"
        android:layout_width="225dp"
        android:layout_height="225dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="135dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="99dp"
        android:layout_height="99dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="90dp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/teamButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="356dp"
        android:layout_marginTop="85dp"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/battleButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="85dp"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="324dp"
        android:layout_marginTop="85dp"
        android:background="@android:color/transparent"
        android:textSize="20dp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/previousButton"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        app:cornerRadius="0dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="220dp"
        android:layout_height="330dp"
        app:layout_constraintStart_toEndOf="@id/previousButton"
        app:layout_constraintEnd_toStartOf="@id/nextButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        app:cornerRadius="0dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="260dp"
        app:cornerRadius="0dp"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/pokemonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/pokemonName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/press_start_2p" />

    <TextView
        android:id="@+id/pokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/press_start_2p" />

    <TextView
        android:id="@+id/pokemonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonImage"
        android:textSize="15dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:fontFamily="@font/press_start_2p" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchBar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pokemonType"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search PokÃ©mon"
        app:queryHint="Search Pokemon"
        android:background="@android:color/transparent"
        android:paddingStart="10dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>