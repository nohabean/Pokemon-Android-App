<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outermost stroke (2dp black) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="4dp"
                android:color="@android:color/black" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>

    <!-- Second outer stroke (5dp white) -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
            <size
                android:width="96dp"
                android:height="96dp" />
        </shape>
    </item>

    <!-- Innermost circle (blue) -->
    <item android:top="9dp" android:left="9dp" android:right="9dp" android:bottom="9dp">
        <shape android:shape="oval">
            <solid android:color="@color/menu_blue" />
            <stroke
                android:width="1dp"
                android:color="@color/black"
                />
            <size
                android:width="88dp"
                android:height="88dp" />
        </shape>
    </item>
</layer-list>